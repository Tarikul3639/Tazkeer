    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "permissions": [
      "storage",
      "notifications",
      "alarms"
